@model List<EShop.Models.Slider>
<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @foreach (var item in Model)
                        {
                            if (item.Slider_ID == ViewBag.FirstSlider.Slider_ID)
                            {
                                <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            }
                            else
                            {
                                <li data-target="#slider-carousel" data-slide-to="@{ ViewBag.Counter++; }"></li>
                            }
                        }
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var item in Model)
                        {
                            if (item.Slider_ID == ViewBag.FirstSlider.Slider_ID)
                            {
                                <div class="item active">
                                    <div class="col-sm-6">
                                        <h1><span>E</span>-SHOPPER</h1>
                                        <h2>@item.Content_Name</h2>
                                        <p>@item.Content_Describtion</p>
                                        <button type="button" class="btn btn-default get">Get it now</button>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="../../Content/images/Slider/@item.Content_Image" 
                                             class="girl img-responsive" alt="" style="width:484px ; height:441px" />
                                        <img src="../../Content/images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>E</span>-SHOPPER</h1>
                                        <h2>@item.Content_Name</h2>
                                        <p>@item.Content_Describtion </p>
                                        <button type="button" class="btn btn-default get">Get it now</button>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="../../Content/images/Slider/@item.Content_Image" class="girl img-responsive" alt="" style="width:484px ; height:441px" />
                                        <img src="../../Content/images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->
