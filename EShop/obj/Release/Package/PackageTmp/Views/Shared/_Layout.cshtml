            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="/Home/Index"><img src="../../Content/images/home/logo.png" alt="" /></a>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    USA
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Egypt</a></li>
                                    <li><a href="#">UnitedKingdom</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    DOLLAR
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Egyptian Pound</a></li>
                                    <li><a href="#">Uero</a></li>
                                </ul>
                            </div   >
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a href="#"><i class="fa fa-user"></i> Account</a></li>
                                    <li><a href="/Product/Index"><i class="fa fa-crosshairs"></i> Products </a></li>
                                    <li><a href="/UserCart"><i class="fa fa-user"></i> Cart </a></li>
                                    <li>
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <ul class="nav navbar-nav navbar-right">
                                                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-lock"></i>Logout</a></li>
                                            </ul>
                                        }
                                    </li>
                                }
                                else
                                {
                                    <li><a href="/Product/Index"><i class="fa fa-crosshairs"></i> Products </a></li>
                                    <li><a href="~/Account/Login"><i class="fa fa-lock"></i> Login</a></li>
                                    <li><a href="~/Account/Register"><i class="fa fa-lock"></i> Register</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li>@Html.ActionLink("Home", "Index", "Home" , null ,new { @class="active" } )</li>
                                <li class="dropdown">
                                    <a href="#">Shop<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li>@Html.ActionLink("Products", "Index", "Product")</li>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li><a href="/UserCart"> Cart </a></li>
                                        }
                                        else
                                        {
